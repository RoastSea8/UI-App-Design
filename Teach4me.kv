<SubjectTextField>:
    size_hint_x: None
    size_hint_y: None
    height: text_field.height
    width: "250dp"
    pos_hint: {"center_x": .37, "center_y": .5}
    MDTextField:
        id: text_field
        hint_text: "Subject(s)"
        text: root.text
        icon_right: "notebook"
        line_color_normal: 0, 0, 1, 1
        line_color_focus: 0, 0, 1, 1
        on_focus:
            root.set_subject(text_field.text)

<ExtracurricularTextField>:
    size_hint_x: None
    size_hint_y: None
    height: text_field.height
    width: "250dp"
