<UsernameTextField>:
    size_hint_y: None
    height: text_field.height

    MDTextField:
        id: text_field
        hint_text: root.hint_text
        text: root.text
        icon_right: "account"
        line_color_normal: 0, 0, 1, 1
        line_color_focus: 0, 0, 1, 1

<PasswordTextField>:
    size_hint_y: None
    height: text_field.height

    MDTextField:
        id: text_field
        hint_text: root.hint_text
        text: root.text
        password: True
        icon_left: "key-variant"
        line_color_normal: 0, 0, 1, 1
        line_color_focus: 0, 0, 1, 1

    MDIconButton:
        icon: "eye-off"
        pos_hint: {"center_y": .5}
        pos: text_field.width - self.width + dp(8), 0
        theme_text_color: "Hint"
        on_release:
            self.icon = "eye" if self.icon == "eye-off" else "eye-off"
            text_field.password = False if text_field.password is True else True


<ContinueButton>:
    size_hint_y: None

    MDFillRoundFlatButton:
        text: root.text
        md_bg_color: "blue"
        on_press:
            app.callback(root.continueToScreen)

<CreateAccountButton>:
    size_hint_y: None

    MDFillRoundFlatButton:
        text: "Create a new account"
        md_bg_color: "blue"
        on_press:
            app.callback("CreateAccountp1")

<EmailTextField>:
    size_hint_y: None
    height: text_field.height

    MDTextField:
        id: text_field
        hint_text: root.hint_text
        text: root.text
        icon_right: "email"
        line_color_normal: 0, 0, 1, 1
        line_color_focus: 0, 0, 1, 1

<AccountTextField>:
    size_hint_y: None
    height: text_field.height

    MDTextField:
        id: text_field
        hint_text: root.hint_text
        text: root.text
        icon_right: root.icon_right
        icon_left: root.icon_left
        line_color_normal: 0, 0, 1, 1
        line_color_focus: 0, 0, 1, 1

