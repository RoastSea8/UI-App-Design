<AboutMeTextField>:
    size_hint_x: None
    size_hint_y: None
    width: "300dp"

    MDTextField:
        id: text_field
        hint_text: "Anything you would like to add?"
        text: root.text
        icon_right: "text-subject"
        max_height: "145dp"
        mode: "rectangle"
        multiline: True
        line_color_normal: 0, 0, 1, 1
        line_color_focus: 0, 0, 1, 1
        on_focus:
            root.set_about_me(text_field.text)

