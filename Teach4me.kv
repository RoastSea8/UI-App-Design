<Teach4MeImg>:
    Image:
        id: teach_4_me_img
        allow_stretch: True
        size_hint: 0.5, 0.5
        pos_hint: {"center_x": .5, "center_y": .9}
        source: "teach4me.png"
<LoginLabel>:
    MDLabel:
        text: "Login"
        text_color: 0, 0, 0, 1
        pos_hint: {"center_x": .89, "center_y": .77}
        font_style: "H4"
<UsernameTextField>:
    size_hint_x: None
    size_hint_y: None
    height: text_field.height
    width: "300dp"

    MDTextField:
        id: text_field
        hint_text: "Username"
        text: root.text
        icon_right: "account"
        line_color_normal: 0, 0, 1, 1
        line_color_focus: 0, 0, 1, 1
        max_text_length: 15
        on_focus:
            root.set_username(text_field.text)
<PasswordTextField>:
    size_hint_x: None
    size_hint_y: None
    height: text_field.height
    width: "300dp"
    MDTextField:
        id: text_field
        hint_text: "Password"
        text: root.text
        password: True
        icon_left: "key-variant"
        line_color_normal: 0, 0, 1, 1
        line_color_focus: 0, 0, 1, 1
        on_focus:
            root.set_password(text_field.text)
    MDIconButton:
        icon: "eye-off"
        pos_hint: {"center_y": .5}
        pos: text_field.width - self.width + dp(8), 0
        theme_text_color: "Hint"
        on_release:
            self.icon = "eye" if self.icon == "eye-off" else "eye-off"
            text_field.password = False if text_field.password is True else True
<ContinueButton>:
    size_hint_x: None
    size_hint_y: None
    MDFillRoundFlatButton:
        text: root.text
        md_bg_color: "blue"
        on_release:
            app.callback(root.continueToScreen)

<CreateAccountLabel>:
    MDLabel:
        text: "Create Account"
        text_color: 0, 0, 0, 1
        pos_hint: {"center_x": .75, "center_y": .77}
        font_style: "H4"

<BackButton>:
    MDIconButton:
        icon: "keyboard-backspace"
        icon_color: app.theme_cls.primary_color
        pos_hint: {"center_y": .97}
        on_press:
            app.callback(root.page)

<EmailTextField>:
    size_hint_x: None
    size_hint_y: None
    height: text_field.height
    width: "300dp"
    MDTextField:
        id: text_field
        hint_text: "Email"
        text: root.text
        icon_right: "email"
        line_color_normal: 0, 0, 1, 1
        line_color_focus: 0, 0, 1, 1
        on_focus:
            root.set_email(text_field.text)

<FirstNameTextField>:
    size_hint_x: None
    size_hint_y: None
    height: text_field.height
    MDTextField:
        id: text_field
        hint_text: root.hint_text
        text: root.text
        icon_right: root.icon_right
        line_color_normal: 0, 0, 1, 1
        line_color_focus: 0, 0, 1, 1
        on_focus:
            root.set_first_name(text_field.text)

<LastNameTextField>:
    size_hint_x: None
    size_hint_y: None
